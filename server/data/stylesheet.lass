(html
 :font-family sans-serif
 :font-size 14pt
 (body
  :padding 0
  :margin 0
  :overflow-y scroll
  (a
   :text-decoration none)
  (a[href]
   :color (hex 0055AA))
  ((:and a[href] :hover)
   :color (hex 0088EE))))

(.system-list
 :margin 0 auto 0 auto
 :max-width 1024px
 (header
  (h1 :font-size 2em
      :text-align center))
 (.search
  :width 100%
  :box-sizing border-box
  :font-size inherit)
 (ul
  :list-style none
  :padding 0
  (h2
   :text-indent 1em
   :margin 0 :padding 0)))
